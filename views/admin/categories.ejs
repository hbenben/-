      </div>
    </div>
  </div>
</div>

<!-- 异步请求，渲染数据 -->
<script src="/assets/vendors/template/template.js"></script>
<script type="text/template" id="categoriesTemp">
  {{each data as value index}}
  <tr>
  <td class="text-center"><input data-id="{{value.id}}"" type="checkbox"></td>
  <td>{{value.name}}</td>
  <td>{{value.slug}}</td>
  <td class="text-center">
<a href="javascript:;" data-id="{{value.id}}" data-name="{{value.name}}" data-slug="{{value.slug}}" class="btn btn-info btn-xs categories-editAll">编辑</a>
<a type='button' href="javascript:;" class="btn btn-danger btn-xs categories-del" data-id="{{value.id}}" >删除</a>
  </td>
</tr>
{{/each}}
  </script>
